      <MudTreeViewItem Expanded T='string' Text="Fix: Voice Chat Removed">
        <MudTreeViewItem T='string'  Class="my-4" Text="Voice services are no longer supported." />
    </MudTreeViewItem>
      <MudTreeViewItem Expanded T='string' Text="Enhancement: Model updated to 4o">
        <MudTreeViewItem T='string'  Class="my-4" Text="Updated model from gpt-3.5turbo to gpt-4o." />
    </MudTreeViewItem>
</MudTreeView>

    </MudExpansionPanel>
            </MudPaper>
        </ItemContent>
    </MudTimelineItem>
