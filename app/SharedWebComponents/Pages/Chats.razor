@page "/chats"
@using System.Collections.Generic

<button @onclick="AddNewChat">Add New Chat</button>

@foreach (var chat in chatInstances)
{
    <MudNavLink href="@($"/chat/{chat.Id}")" Icon="@Icons.Material.Rounded.Chat">Chat {chat.Id}</MudNavLink>
}

@code {
    private List<ChatInstance> chatInstances = new List<ChatInstance>();
    private int chatCounter = 0;

    private void AddNewChat()
    {
        ChatInstance chatInstance = new ChatInstance();
        chatInstance.Name = $"New Chat {chatCounter}";
        chatInstances.Add(chatInstance);
        chatCounter++;
    }
}